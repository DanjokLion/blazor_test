@using Microsoft.AspNetCore.Components
@using MudBlazor
@using Template.UI.Data


<MudForm Model="@_filters">
    <div class="row">
        <div class="col-3">
            <MudDatePicker Label="@nameof(WeatherForecastFilterModel.DateFrom)" @bind-Date="@_filters.DateFrom" Clearable/>
        </div>
        <div class="col-3">
            <MudDatePicker Label="@nameof(WeatherForecastFilterModel.DateTo)" @bind-Date="@_filters.DateTo" Clearable/>

        </div>
        <div class="col-3">
            <MudTextField Immediate="true" T="Guid?" Label="@nameof(WeatherForecastFilterModel.Id)" @bind-Value="@_filters.Id" Clearable/>
        </div>

    </div>
    <div class="text-end">
    <MudButton Size="Size.Small" Color="Color.Primary" Variant="Variant.Filled" OnClick="@(async () => await SubmitFiltersAsync())">Применить фильтры</MudButton>
    <MudButton Size="Size.Small" Variant="Variant.Filled" OnClick="@(async () => await ClearFiltersAsync())">Сбросить фильтры</MudButton>
    </div>
</MudForm>
<br/>